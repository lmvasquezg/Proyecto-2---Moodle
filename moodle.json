        "LaunchConfig": {
            "Type": "AWS::AutoScaling::LaunchConfiguration",
            "Metadata": {
                "Comment1": "Configure the bootstrap helpers to install the Apache Web Server and PHP",
                "Comment2": "The website content is downloaded from the CloudFormationPHPSample.zip file",
                "AWS::CloudFormation::Init": {
                    "config": {
                        "packages": {
                            "yum": {
                                "docker": [],
                                "mysql": []
                            }
                        },
                        "files": {
                            "/home/ec2-user/docker-compose.yml": {
                                "content": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            "version: '2'\n",
                                            "services:\n",
                                            "   moodle:\n",
                                            "       image: 'bitnami/moodle:3'\n",
                                            "       environment:\n",
                                            "           - MARIADB_HOST=",
                                            {
                                                "Fn::GetAtt" : [ 
                                                    "MySQLDatabase", 
                                                    "Endpoint.Address" 
                                                ]
                                            },
                                            "\n",
                                            "           - MARIADB_PORT_NUMBER=3306\n",
                                            "           - MOODLE_DATABASE_USER=admin\n",
                                            "           - MOODLE_DATABASE_NAME=moodledb\n",
                                            "           - ALLOW_EMPTY_PASSWORD=no\n",
                                            "           - MOODLE_DATABASE_PASSWORD=LIMP2017\n",
                                            "           - MOODLE_USERNAME=admin\n",
                                            "           - MOODLE_PASSWORD=bitnami\n",
                                            "           - MOODLE_EMAIL=isamuri.r@hotmail.com\n",
                                            "           - MOODLE_SKIP_INSTALL=${SKIP_INSTALL}\n",
                                            "       ports:\n",
                                            "           - '80:80'\n",
                                            "           - '443:443'\n"
                                        ]
                                    ]
                                },
                                "mode": "000777",
                                "owner": "ec2-user",
                                "group": "docker"
                            }
                        }
                    }
                },
                "AWS::CloudFormation::Designer": {
                    "id": "c6861549-a87a-4b9c-ae8b-3bfeba646bed"
                }
            },
            "Properties": {
                "ImageId": {
                    "Fn::FindInMap": [
                        "AWSRegionArch2AMI",
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Fn::FindInMap": [
                                "AWSInstanceType2Arch",
                                {
                                    "Ref": "InstanceType"
                                },
                                "Arch"
                            ]
                        }
                    ]
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "SecurityGroups": [
                    {
                        "Ref": "WebServerSecurityGroup"
                    }
                ],
                "KeyName": {
                    "Ref": "KeyName"
                },
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -x\n",
                                "yum update -y aws-cfn-bootstrap\n",
                                "sudo curl -L \"https://github.com/docker/compose/releases/download/1.25.4/docker-compose-$(uname -s)-$(uname -m)\" -o /usr/local/bin/docker-compose && sudo chmod +x /usr/local/bin/docker-compose\n",
                                "export PATH=$PATH:/usr/local/bin \n",

                                "# Install the files and packages from the metadata\n",
                                "/opt/aws/bin/cfn-init -v ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource LaunchConfig ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n",

                                "sudo service docker start\n",
                                "sudo usermod -a -G docker ec2-user\n",
                                "newgrp docker\n",
                                
                                "sleep $[ ( $RANDOM % 60 )  + 1 ]s\n",

                                "if ! mysql -h ",
                                {
                                    "Fn::GetAtt" : [ 
                                        "MySQLDatabase", 
                                        "Endpoint.Address" 
                                    ]
                                },
                                " -u ",
                                { 
                                    "Ref": "DBUser"
                                },
                                " -p",
                                {
                                    "Ref": "DBPassword"
                                },
                                " -e 'use moodledb; select 1 from mdl_user limit 1;'; then SKIP_INSTALL=no docker-compose -f /home/ec2-user/docker-compose.yml up --build -d; else SKIP_INSTALL=yes docker-compose -f /home/ec2-user/docker-compose.yml up --build -d; fi\n",
                                
                                "# Signal the status from cfn-init\n",
                                "/opt/aws/bin/cfn-signal -e $? ",
                                "         --stack ",
                                {
                                    "Ref": "AWS::StackName"
                                },
                                "         --resource WebServerGroup ",
                                "         --region ",
                                {
                                    "Ref": "AWS::Region"
                                },
                                "\n"
                            ]
                        ]
                    }
                }
            }
